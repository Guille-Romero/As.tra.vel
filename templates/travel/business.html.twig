{% extends 'base.html.twig' %}

{% block title %}Hello TravelController!{% endblock %}

{% block body %}
    <div class ="wrapper">
    <main>
        <div class = "destination-container">
            <section class="ticket-sale">
                <h2>Space Travel Tickets</h2>
                <p>Explore the wonders of our solar system with our exclusive space travel tickets. Choose your destination and start your journey today!</p>
        
                <div class="ticket-options">
                    <div class="ticket-option">
                        <h3>Moon Ticket</h3>
                        <p>Embark on a lunar adventure with our Moon Ticket.</p>
                        <p>Price: $500</p>
                        <button class="buy-button">Buy Now</button>
                    </div>
        
                    <div class="ticket-option">
                        <h3>Mars Ticket</h3>
                        <p>Join the mission to the Red Planet with our Mars Ticket.</p>
                        <p>Price: $1,000</p>
                        <button class="buy-button">Buy Now</button>
                    </div>
        
                    <div class="ticket-option">
                        <h3>Venus Orbit Ticket</h3>
                        <p>Experience the beauty of Venus from orbit.</p>
                        <p>Price: $800</p>
                        <button class="buy-button">Buy Now</button>
                    </div>
        
                    <div class="ticket-option">
                        <h3>Saturn Rings Outpost Ticket</h3>
                        <p>Visit the Saturn Rings Outpost for a truly unique experience.</p>
                        <p>Price: $1,500</p>
                        <button class="buy-button">Buy Now</button>
                    </div>
        
                    <div class="ticket-option">
                        <h3>Enceladus Ticket</h3>
                        <p>Explore the icy moon of Enceladus and its mysterious geysers.</p>
                        <p>Price: $1,200</p>
                        <button class="buy-button">Buy Now</button>
                    </div>
        
                    <div class="ticket-option">
                        <h3>Europa Ticket</h3>
                        <p>Discover the subsurface ocean of Europa, one of Jupiter's moons.</p>
                        <p>Price: $1,300</p>
                        <button class="buy-button">Buy Now</button>
                    </div>
        
                    <div class="ticket-option">
                        <h3>Titan Ticket</h3>
                        <p>Experience the unique landscapes of Saturn's largest moon, Titan.</p>
                        <p>Price: $1,400</p>
                        <button class="buy-button">Buy Now</button>
                    </div>
                </div>
            </section>
        </div>
    </main>
    </div>
{% endblock %}
