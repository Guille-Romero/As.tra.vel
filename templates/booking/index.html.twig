{% extends 'base.html.twig' %}

{% block title %}Hello BookingController!{% endblock %}

{% block body %}
    <div class="wrapper">
    <main class="container mt-4">
        <section class="booking-form">
            <h2 class="mb-4 text-center">Book Your Space Journey</h2>
            <div class="row">
                <!-- Destination Selection -->
                <div class="col-md-4">
                    <fieldset class = "back-card my-5 w-100">
                        <legend>Select Destination</legend>
                        <form action="#" method="POST">
                            <div class="form-group">
                                <label for="destination">Choose a Destination:</label>
                                <select class="form-control" name="destination" id="destination" required>
                                    <option value="moon">Apollo 11 Landing Site -Moon-</option>
                                    <option value="mars">Olympus Mons -Mars-</option>
                                    <option value="mars">Valle Marineris -Mars-</option>
                                    <option value="mars">Enceladus Geysers -Saturn's Moon-</option>
                                    <option value="mars">Europa's Subsurface Sea -Jupiter's Moon-</option>
                                    <option value="mars">Titan's Lakes and Rivers -Saturn's Moon-</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="date">Select Date:</label>
                                <input type="date" class="form-control" name="date" id="date" required>
                            </div>
                            <div class="form-group">
                                <label for="passengers">Number of Passengers:</label>
                                <input type="number" class="form-control" name="passengers" id="passengers" min="1" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Book Destination</button>
                        </form>
                    </fieldset>
                </div>
                
                <!-- Activity Selection -->
                <div class="col-md-4">
                    <fieldset class = "back-card my-5 w-100">
                        <legend>Select Activity</legend>
                        <form action="#" method="POST">
                            <div class="form-group">
                                <label for="activity">Choose an Activity:</label>
                                <select class="form-control" name="activity" id="activity" required>
                                    <option value="surfing">Surfing Winds</option>
                                    <option value="buggy">High-Speed Buggy</option>
                                    <option value="jetski">Geyser Propulsion Jump</option>
                                    <option value="scuba">Scuba Diving</option>
                                    <option value="spacewalk">Space Walk</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="date">Select Date:</label>
                                <input type="date" class="form-control" name="date" id="date" required>
                            </div>
                            <div class="form-group">
                                <label for="participants">Number of Participants:</label>
                                <input type="number" class="form-control" name="participants" id="participants" min="1" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Book Activity</button>
                        </form>
                    </fieldset>
                </div>
                
                <!-- Cruiser Selection -->
                <div class="col-md-4">
                    <fieldset class = "back-card my-5 w-100">
                        <legend>Select Cruiser</legend>
                        <form action="#" method="POST">
                            <div class="form-group">
                                <label for="cruiser">Choose a Cruiser:</label>
                                <select class="form-control" name="cruiser" id="cruiser" required>
                                    <option value="orbiter">Orbiter</option>
                                    <option value="shuttle">Shuttle</option>
                                    <option value="ad-astra">Ad-Astra</option>
                                    <option value="cruiser">Cruiser</option>
                                    <!-- Add more cruisers here -->
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="date">Select Date:</label>
                                <input type="date" class="form-control" name="date" id="date" required>
                            </div>
                            <div class="form-group">
                                <label for="passengers">Number of Passengers:</label>
                                <input type="number" class="form-control" name="passengers" id="passengers" min="1" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Book Cruiser</button>
                        </form>
                    </fieldset>
                </div>
            </div>
        </section>
    </main>
    </div>
{% endblock %}
